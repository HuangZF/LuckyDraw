<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>

 <package name="default" namespace="/" extends="struts-default">
	<!-- 自定义拦截器-->
		<interceptors>
			<interceptor name="autowiring"
				class="com.opensymphony.xwork2.spring.interceptor.ActionAutowiringInterceptor" />
			
			
			<interceptor-stack name="mystack">
				<interceptor-ref name="autowiring"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
		   </interceptors>
		<default-interceptor-ref name="mystack"></default-interceptor-ref>
		<!-- 全局页面 -->
	   <global-results>
	   <result name="error">/error.jsp</result>
	   </global-results>
	
	</package>
	<package name="LuckyDraw" namespace="/" extends="default">
		<action name="charge" class="com.ruyicai.charge.action.ChargeAction"></action>
		<action name="notify" class="com.ruyicai.charge.action.ChargeNotifyAction"></action>
	</package>
	
</struts>
